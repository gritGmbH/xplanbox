<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>xplan-validator-wms-sql-workspace</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${basedir}/src/main/workspace</directory>
      <includes>
        <include>jdbc/xplan.xml</include>
        <include>datasources/feature/xplanvalidator.xml</include>
        <include>services/html.gfi</include>
      </includes>
      <excludes>
        <exclude>appschemas/*</exclude>
      </excludes>
      <outputDirectory>.</outputDirectory>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/workspace/layers/validator-wms/sql</directory>
      <outputDirectory>layers/planart-wms/</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/workspace/themes/planart-wms</directory>
      <outputDirectory>themes/</outputDirectory>
      <includes>
        <include>bplan.xml</include>
        <include>fplan.xml</include>
        <include>lplan.xml</include>
        <include>rplan.xml</include>
        <include>soplan.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/workspace/services/validator-wms</directory>
      <outputDirectory>services/</outputDirectory>
      <filtered>true</filtered>
      <includes>
        <include>wms_metadata.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/workspace/services/validator-wms</directory>
      <outputDirectory>services/</outputDirectory>
      <filtered>false</filtered>
      <excludes>
        <exclude>wms_metadata.xml</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/workspace/datasources/feature/bbox_cache-xplansyn</directory>
      <outputDirectory>datasources/feature/</outputDirectory>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/workspace/styles/xplansyn</directory>
      <outputDirectory>styles/</outputDirectory>
      <filtered>false</filtered>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>de.latlon.product.xplanbox:xplan-schemas</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>appschemas/XPlanGML_Syn/**</include>
        </includes>
      </unpackOptions>
      <outputDirectory>/</outputDirectory>
    </dependencySet>
  </dependencySets>
</assembly>
