<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>xplan-manager-workspace</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${basedir}/src/main/workspace</directory>
      <outputDirectory>.</outputDirectory>
      <filtered>false</filtered>
      <includes>
        <include>appschemas/inspireplu/PlannedLandUse.xsd</include>
        <include>datasources/feature/inspireplu.xml</include>
        <include>datasources/feature/bbox_cache.properties</include>
        <include>jdbc/inspireplu.xml</include>
        <include>layers/*</include>
        <include>services/wfs.xml</include>
        <include>services/wfs_metadata.xml</include>
        <include>services/wms.xml</include>
        <include>services/wms_metadata.xml</include>
        <include>styles/*</include>
        <include>themes/*</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>