<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>xplan-inspireplu-workspace-default</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${basedir}/src/main/workspace</directory>
      <outputDirectory>.</outputDirectory>
      <filtered>true</filtered>
      <includes>
        <include>appschemas/inspireplu/PlannedLandUse.xsd</include>
        <include>datasources/feature/inspireplu.xml</include>
        <include>datasources/feature/inspireplu_view.xml</include>
        <include>jdbc/inspireplu.xml</include>
        <include>layers/inspireplu.xml</include>
        <include>services/downloadservice*</include>
        <include>services/viewservice*</include>
        <include>services/inspirepluhtml.gfi</include>
        <include>styles/*</include>
        <include>themes/inspireplu.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/workspace/datasources/feature/bbox_cache-inspireplu</directory>
      <outputDirectory>datasources/feature/</outputDirectory>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/workspace/styles/inspireplu</directory>
      <outputDirectory>styles/</outputDirectory>
      <filtered>true</filtered>
    </fileSet>
  </fileSets>
</assembly>