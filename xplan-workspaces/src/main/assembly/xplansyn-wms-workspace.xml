<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>xplansyn-wms-workspace</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${basedir}/src/main/workspace</directory>
      <includes>
        <include>data/**</include>
        <include>datasources/feature/xplansyn*</include>
        <include>datasources/tile/**</include>
        <include>jdbc/xplan.xml</include>
        <include>services/wms*</include>
        <include>services/html.gfi</include>
        <include>layers/bplan*</include>
        <include>layers/fplan*</include>
        <include>layers/lplan*</include>
        <include>layers/rplan*</include>
        <include>layers/soplan*</include>
        <include>layers/dummyrasterlayer.ignore</include>
        <include>legends/*</include>
        <include>services/wms*</include>
        <include>themes/bplan*</include>
        <include>themes/fplan*</include>
        <include>themes/lplan*</include>
        <include>themes/rplan*</include>
        <include>themes/soplan*</include>
        <include>gdal.ignore</include>
      </includes>
      <excludes>
        <exclude>appschemas/*</exclude>
        <exclude>services/wms_metadata.xml</exclude>
        <exclude>services/wmspre_metadata.xml</exclude>
        <exclude>services/wmsarchive_metadata.xml</exclude>
      </excludes>
      <outputDirectory>.</outputDirectory>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/workspace</directory>
      <includes>
        <include>services/wms_metadata.xml</include>
        <include>services/wmspre_metadata.xml</include>
        <include>services/wmsarchive_metadata.xml</include>
      </includes>
      <outputDirectory>.</outputDirectory>
      <filtered>true</filtered>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/workspace/datasources/feature/bbox_cache-xplansyn</directory>
      <outputDirectory>datasources/feature/</outputDirectory>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/workspace/styles/xplansyn</directory>
      <outputDirectory>styles/</outputDirectory>
      <filtered>false</filtered>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>de.latlon.product.xplanbox:xplan-schemas</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>appschemas/XPlanGML_Syn/**</include>
        </includes>
      </unpackOptions>
      <outputDirectory>/</outputDirectory>
    </dependencySet>
  </dependencySets>
</assembly>
