<?xml version="1.0" encoding="ISO-8859-1" standalone="yes"?>
<sld:StyledLayerDescriptor version="1.0.0" xmlns:sld="http://www.opengis.net/sld" xmlns:ogc="http://www.opengis.net/ogc"
  xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xplan="http://www.deegree.org/xplanung/1/0">
  <sld:NamedLayer>
    <sld:Name>NSM_RP_FreizeitErholung</sld:Name>
    <sld:UserStyle>
      <sld:Name>vollflaechig</sld:Name>
      <sld:FeatureTypeStyle>
        <sld:FeatureTypeName>xplan:RP_FreizeitErholung</sld:FeatureTypeName>

        <!--Fläche-->
        <sld:Rule>
          <sld:Name>rp_freizeiterholung</sld:Name>
          <sld:Title>RP: Freizeit und Erholung</sld:Title>
          <ogc:Filter>
            <ogc:PropertyIsEqualTo>
              <ogc:Function name="IsSurface">
                <ogc:PropertyName>xplan:position</ogc:PropertyName>
              </ogc:Function>
              <ogc:Literal>true</ogc:Literal>
            </ogc:PropertyIsEqualTo>
          </ogc:Filter>
          <sld:PolygonSymbolizer uom="meter">
            <Geometry>
              <ogc:PropertyName>xplan:position</ogc:PropertyName>
            </Geometry>
            <sld:Stroke>
              <sld:SvgParameter name="stroke">#B1B1B1</sld:SvgParameter>
              <sld:SvgParameter name="stroke-opacity">1.0</sld:SvgParameter>
              <sld:SvgParameter name="stroke-width">1.5</sld:SvgParameter>
              <sld:SvgParameter name="stroke-linecap">butt</sld:SvgParameter>
              <sld:SvgParameter name="stroke-linejoin">round</sld:SvgParameter>
            </sld:Stroke>
          </sld:PolygonSymbolizer>
        </sld:Rule>

        <!--Linien-->
        <sld:Rule>
          <sld:Name>rp_freizeiterholung</sld:Name>
          <sld:Title>RP: Freizeit und Erholung</sld:Title>
          <ogc:Filter>
            <ogc:PropertyIsEqualTo>
              <ogc:Function name="IsCurve">
                <ogc:PropertyName>xplan:position</ogc:PropertyName>
              </ogc:Function>
              <ogc:Literal>true</ogc:Literal>
            </ogc:PropertyIsEqualTo>
          </ogc:Filter>
          <sld:LineSymbolizer uom="meter">
            <Geometry>
              <ogc:PropertyName>xplan:position</ogc:PropertyName>
            </Geometry>
            <sld:Stroke>
              <sld:SvgParameter name="stroke">#B1B1B1</sld:SvgParameter>
              <sld:SvgParameter name="stroke-opacity">1.0</sld:SvgParameter>
              <sld:SvgParameter name="stroke-width">1.5</sld:SvgParameter>
              <sld:SvgParameter name="stroke-linecap">butt</sld:SvgParameter>
              <sld:SvgParameter name="stroke-linejoin">round</sld:SvgParameter>
            </sld:Stroke>
          </sld:LineSymbolizer>
        </sld:Rule>

        <!--Punkt-->
        <sld:Rule>
          <sld:Name>rp_freizeiterholung</sld:Name>
          <sld:Title>RP: Freizeit und Erholung</sld:Title>
          <ogc:Filter>
            <ogc:PropertyIsEqualTo>
              <ogc:Function name="IsPoint">
                <ogc:PropertyName>xplan:position</ogc:PropertyName>
              </ogc:Function>
              <ogc:Literal>true</ogc:Literal>
            </ogc:PropertyIsEqualTo>
          </ogc:Filter>
          <sld:PointSymbolizer uom="meter">
            <Geometry>
              <ogc:PropertyName>xplan:position</ogc:PropertyName>
            </Geometry>
            <sld:Graphic>
              <sld:Mark>
                <sld:WellKnownName>circle</sld:WellKnownName>
                <sld:Fill>
                  <sld:SvgParameter name="fill">#B1B1B1</sld:SvgParameter>
                  <sld:SvgParameter name="fill-opacity">1.0</sld:SvgParameter>
                </sld:Fill>
                <sld:Stroke>
                  <sld:SvgParameter name="stroke">#B1B1B1</sld:SvgParameter>
                  <sld:SvgParameter name="stroke-opacity">0.0</sld:SvgParameter>
                  <sld:SvgParameter name="stroke-width">1</sld:SvgParameter>
                </sld:Stroke>
              </sld:Mark>
              <sld:Size>10</sld:Size>
            </sld:Graphic>
          </sld:PointSymbolizer>
        </sld:Rule>

      </sld:FeatureTypeStyle>
    </sld:UserStyle>
  </sld:NamedLayer>
</sld:StyledLayerDescriptor>
