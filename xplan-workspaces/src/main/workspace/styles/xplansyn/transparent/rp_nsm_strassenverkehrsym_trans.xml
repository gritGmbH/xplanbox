<?xml version="1.0" encoding="ISO-8859-1" standalone="yes"?>
<sld:StyledLayerDescriptor version="1.0.0" xmlns:sld="http://www.opengis.net/sld" xmlns:ogc="http://www.opengis.net/ogc"
  xmlns:xlink="http://www.w3.org/1999/xlink" xmlns:xplan="http://www.deegree.org/xplanung/1/0">
  <sld:NamedLayer>
    <sld:Name>RP_NSM_Strassenverkehr</sld:Name>
    <sld:UserStyle>
      <sld:Name>transparent</sld:Name>
      <sld:FeatureTypeStyle>
        <sld:FeatureTypeName>xplan:RP_NSM_Strassenverkehr</sld:FeatureTypeName>

        <!--Anschlussstelle-->

        <sld:Rule>
          <sld:Name>VR_Anschlussstelle</sld:Name>
          <sld:Title>Vorranggebiet Anschlussstelle</sld:Title>
          <ogc:Filter>
            <ogc:And>
              <ogc:PropertyIsEqualTo>
                <ogc:PropertyName>xplan:gebietsTypCode</ogc:PropertyName>
                <ogc:Literal>1000</ogc:Literal>
              </ogc:PropertyIsEqualTo>
              <ogc:PropertyIsEqualTo>
                <ogc:PropertyName>xplan:strassenverkehrTyp_NSMCode</ogc:PropertyName>
                <ogc:Literal>8000</ogc:Literal>
              </ogc:PropertyIsEqualTo>
            </ogc:And>
          </ogc:Filter>
          <sld:PolygonSymbolizer>
            <Geometry>
              <ogc:PropertyName>xplan:position</ogc:PropertyName>
            </Geometry>
            <sld:Fill>
              <sld:CSSParameter name="fill-opacity">0</sld:CSSParameter>
            </sld:Fill>
            <sld:Stroke>
              <sld:CssParameter name="stroke-opacity">0</sld:CssParameter>
            </sld:Stroke>
          </sld:PolygonSymbolizer>
        </sld:Rule>

        <sld:Rule>
          <sld:Name>vb_Anschlussstelle</sld:Name>
          <sld:Title>Vorbehaltsgebiet Anschlussstelle</sld:Title>
          <ogc:Filter>
            <ogc:And>
              <ogc:PropertyIsEqualTo>
                <ogc:PropertyName>xplan:gebietsTypCode</ogc:PropertyName>
                <ogc:Literal>2000</ogc:Literal>
              </ogc:PropertyIsEqualTo>
              <ogc:PropertyIsEqualTo>
                <ogc:PropertyName>xplan:strassenverkehrTyp_NSMCode</ogc:PropertyName>
                <ogc:Literal>8000</ogc:Literal>
              </ogc:PropertyIsEqualTo>
            </ogc:And>
          </ogc:Filter>
          <sld:PolygonSymbolizer>
            <Geometry>
              <ogc:PropertyName>xplan:position</ogc:PropertyName>
            </Geometry>
            <sld:Fill>
              <sld:CSSParameter name="fill-opacity">0</sld:CSSParameter>
            </sld:Fill>
            <sld:Stroke>
              <sld:CssParameter name="stroke-opacity">0</sld:CssParameter>
            </sld:Stroke>
          </sld:PolygonSymbolizer>
        </sld:Rule>


        <!--Text_Strasse-->

        <sld:Rule>
          <sld:Name>Text_Strasse</sld:Name>
          <sld:Title>Text_Strasse</sld:Title>
          <sld:MinScaleDenominator>450000</sld:MinScaleDenominator>
          <sld:MaxScaleDenominator>2000000</sld:MaxScaleDenominator>
          <TextSymbolizer>
            <Label>
              <ogc:PropertyName>bezeich3</ogc:PropertyName>
            </Label>
            <Font>
              <CssParameter name="font-family">Arial Narrow</CssParameter>
              <CssParameter name="font-weight">Bold</CssParameter>
              <CssParameter name="font-size">13.5</CssParameter>
            </Font>
            <LabelPlacement>
              <PointPlacement>
                <AnchorPoint>
                  <AnchorPointX>0.52</AnchorPointX>
                  <AnchorPointY>1.5</AnchorPointY>
                </AnchorPoint>
              </PointPlacement>
            </LabelPlacement>
            <Fill>
              <CSSParameter name="fill-opacity">0</CSSParameter>
            </Fill>
          </TextSymbolizer>
        </sld:Rule>

        <sld:Rule>
          <sld:Name>Text_Strasse</sld:Name>
          <sld:Title>Text_Strasse</sld:Title>
          <sld:MinScaleDenominator>150000</sld:MinScaleDenominator>
          <sld:MaxScaleDenominator>450000</sld:MaxScaleDenominator>
          <TextSymbolizer>
            <Label>
              <ogc:PropertyName>bezeich3</ogc:PropertyName>
            </Label>
            <Font>
              <CssParameter name="font-family">Arial Narrow</CssParameter>
              <CssParameter name="font-weight">Bold</CssParameter>
              <CssParameter name="font-size">26</CssParameter>
            </Font>
            <LabelPlacement>
              <PointPlacement>
                <AnchorPoint>
                  <AnchorPointX>0.52</AnchorPointX>
                  <AnchorPointY>1.5</AnchorPointY>
                </AnchorPoint>
              </PointPlacement>
            </LabelPlacement>
            <Fill>
              <CSSParameter name="fill-opacity">0</CSSParameter>
            </Fill>
          </TextSymbolizer>
        </sld:Rule>

        <sld:Rule>
          <sld:Name>Text_Strasse</sld:Name>
          <sld:Title>Text_Strasse</sld:Title>
          <sld:MinScaleDenominator>80000</sld:MinScaleDenominator>
          <sld:MaxScaleDenominator>150000</sld:MaxScaleDenominator>
          <TextSymbolizer>
            <Label>
              <ogc:PropertyName>bezeich3</ogc:PropertyName>
            </Label>
            <Font>
              <CssParameter name="font-family">Arial Narrow</CssParameter>
              <CssParameter name="font-weight">Bold</CssParameter>
              <CssParameter name="font-size">65</CssParameter>
            </Font>
            <LabelPlacement>
              <PointPlacement>
                <AnchorPoint>
                  <AnchorPointX>0.52</AnchorPointX>
                  <AnchorPointY>1.5</AnchorPointY>
                </AnchorPoint>
              </PointPlacement>
            </LabelPlacement>
            <Fill>
              <CSSParameter name="fill-opacity">0</CSSParameter>
            </Fill>
          </TextSymbolizer>
        </sld:Rule>

        <sld:Rule>
          <sld:Name>Text_Strasse</sld:Name>
          <sld:Title>Text_Strasse</sld:Title>
          <sld:MinScaleDenominator>30000</sld:MinScaleDenominator>
          <sld:MaxScaleDenominator>80000</sld:MaxScaleDenominator>
          <TextSymbolizer>
            <Label>
              <ogc:PropertyName>bezeich3</ogc:PropertyName>
            </Label>
            <Font>
              <CssParameter name="font-family">Arial Narrow</CssParameter>
              <CssParameter name="font-weight">Bold</CssParameter>
              <CssParameter name="font-size">135</CssParameter>
            </Font>
            <LabelPlacement>
              <PointPlacement>
                <AnchorPoint>
                  <AnchorPointX>0.52</AnchorPointX>
                  <AnchorPointY>1.5</AnchorPointY>
                </AnchorPoint>
              </PointPlacement>
            </LabelPlacement>
            <Fill>
              <CSSParameter name="fill-opacity">0</CSSParameter>
            </Fill>
          </TextSymbolizer>
        </sld:Rule>


      </sld:FeatureTypeStyle>
    </sld:UserStyle>
  </sld:NamedLayer>
</sld:StyledLayerDescriptor>

