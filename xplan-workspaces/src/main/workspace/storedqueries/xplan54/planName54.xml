<wfs:StoredQueryDefinition id="urn:ogc:def:query:OGC-WFS::PlanName" xmlns:wfs="http://www.opengis.net/wfs/2.0"
                           xmlns:fes="http://www.opengis.net/fes/2.0"
                           xmlns:xplan54="http://www.xplanung.de/xplangml/5/4">
  <wfs:Title>planName</wfs:Title>
  <wfs:Abstract>Es koennen vollstaendige XPlanGML Plaene anhand des Plannamens heruntergeladen werden.</wfs:Abstract>
  <wfs:Parameter xmlns:xsd="http://www.w3.org/2001/XMLSchema" name="planName" type="xsd:string">
    <Abstract>planName (Mandatory)</Abstract>
  </wfs:Parameter>
  <wfs:QueryExpressionText returnFeatureTypes="${deegreewfs:ServedFeatureTypes}"
                           language="urn:ogc:def:queryLanguage:OGC-WFS::WFS_QueryExpression" isPrivate="false">

    <!-- BP_Plan -->
    <wfs:Query typeNames="xplan54:BP_Plan">
      <fes:Filter>
        <fes:PropertyIsEqualTo>
          <fes:ValueReference>
            //xplan54:BP_Plan/xplan54:name
          </fes:ValueReference>
          <fes:Literal>${planName}</fes:Literal>
        </fes:PropertyIsEqualTo>
      </fes:Filter>
    </wfs:Query>

    <!-- FP_Plan -->
    <wfs:Query typeNames="xplan54:FP_Plan">
      <fes:Filter>
        <fes:PropertyIsEqualTo>
          <fes:ValueReference>
            //xplan54:FP_Plan/xplan54:name
          </fes:ValueReference>
          <fes:Literal>${planName}</fes:Literal>
        </fes:PropertyIsEqualTo>
      </fes:Filter>
    </wfs:Query>

    <!-- LP_Plan -->
    <wfs:Query typeNames="xplan54:LP_Plan">
      <fes:Filter>
        <fes:PropertyIsEqualTo>
          <fes:ValueReference>
            //xplan54:LP_Plan/xplan54:name
          </fes:ValueReference>
          <fes:Literal>${planName}</fes:Literal>
        </fes:PropertyIsEqualTo>
      </fes:Filter>
    </wfs:Query>

    <!-- RP_Plan -->
    <wfs:Query typeNames="xplan54:RP_Plan">
      <fes:Filter>
        <fes:PropertyIsEqualTo>
          <fes:ValueReference>
            //xplan54:RP_Plan/xplan54:name
          </fes:ValueReference>
          <fes:Literal>${planName}</fes:Literal>
        </fes:PropertyIsEqualTo>
      </fes:Filter>
    </wfs:Query>
    
  </wfs:QueryExpressionText>
</wfs:StoredQueryDefinition>
