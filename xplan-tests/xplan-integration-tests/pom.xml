<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>xplan-integration-tests</artifactId>
  <packaging>jar</packaging>
  <description>Contains integration tests (SoapUI and Java).</description>

  <parent>
    <groupId>de.latlon.product.xplanbox</groupId>
    <artifactId>xplan-tests</artifactId>
    <version>4.4-SNAPSHOT</version>
  </parent>

  <properties>
    <!-- Tomcat configuration -->
    <tomcat.host>localhost</tomcat.host>
    <tomcat.port>9001</tomcat.port>
    <!-- Context paths of webapps -->
    <managerWeb.contextPath>manager-web</managerWeb.contextPath>
    <managerWeb.adContextPath>manager-web-ad</managerWeb.adContextPath>
    <wfs.contextPath>xplan-wfs</wfs.contextPath>
    <synwfs.contextPath>xplansyn-wfs</synwfs.contextPath>
    <wms.contextPath>xplan-wms</wms.contextPath>
  </properties>

  <build>
    <!-- Prepare environment -->
    <plugins>
      <plugin>
        <artifactId>maven-assembly-plugin</artifactId>
        <executions>
          <execution>
            <id>assembly-ad</id>
            <configuration>
              <descriptors>
                <descriptor>src/test/assembly/assembly-ad.xml</descriptor>
              </descriptors>
              <appendAssemblyId>false</appendAssemblyId>
              <finalName>${managerWeb.adContextPath}</finalName>
            </configuration>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
          <execution>
            <id>assembly-workspaces</id>
            <configuration>
              <descriptors>
                <descriptor>src/test/assembly/assembly-workspaces.xml</descriptor>
              </descriptors>
              <filters>
                <filter>src/test/filter/workspace.properties</filter>
              </filters>
              <appendAssemblyId>false</appendAssemblyId>
              <finalName>workspaces</finalName>
            </configuration>
            <phase>package</phase>
            <goals>
              <goal>single</goal>
            </goals>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-resources-plugin</artifactId>
        <version>2.6</version>
        <executions>
          <execution>
            <id>copy-webapps-properties</id>
            <phase>package</phase>
            <goals>
              <goal>copy-resources</goal>
            </goals>
            <configuration>
              <outputDirectory>${project.build.directory}/workspaces</outputDirectory>
              <resources>
                <resource>
                  <directory>src/test/resources/workspaces</directory>
                  <includes>
                    <include>webapps.properties</include>
                  </includes>
                </resource>
              </resources>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack</id>
            <phase>package</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>${project.groupId}</groupId>
                  <artifactId>xplan-tests-resources</artifactId>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${project.build.outputDirectory}/xplan-tests-resources</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>

      <!-- Run Tomcat -->
      <plugin>
        <groupId>org.apache.tomcat.maven</groupId>
        <artifactId>tomcat7-maven-plugin</artifactId>
        <configuration>
          <systemProperties>
            <DEEGREE_WORKSPACE_ROOT>${project.build.directory}/workspaces</DEEGREE_WORKSPACE_ROOT>
          </systemProperties>
          <ignorePackaging>true</ignorePackaging>
          <port>${tomcat.port}</port>
          <path>/${managerWeb.adContextPath}</path>
          <warFile>${project.build.directory}/${managerWeb.adContextPath}.war</warFile>
          <warDirectory>${project.build.directory}/${managerWeb.adContextPath}</warDirectory>
          <webapps>
            <webapp>
              <groupId>${project.groupId}</groupId>
              <artifactId>xplan-manager-web</artifactId>
              <version>${project.version}</version>
              <type>war</type>
              <asWebapp>true</asWebapp>
              <context-path>/${managerWeb.contextPath}</context-path>
            </webapp>
            <webapp>
              <groupId>${project.groupId}</groupId>
              <artifactId>xplan-wfs</artifactId>
              <version>${project.version}</version>
              <type>war</type>
              <asWebapp>true</asWebapp>
              <context-path>/${wfs.contextPath}</context-path>
            </webapp>
            <webapp>
              <groupId>${project.groupId}</groupId>
              <artifactId>xplansyn-wfs</artifactId>
              <version>${project.version}</version>
              <type>war</type>
              <asWebapp>true</asWebapp>
              <context-path>/${synwfs.contextPath}</context-path>
            </webapp>
            <webapp>
              <groupId>${project.groupId}</groupId>
              <artifactId>xplan-wms</artifactId>
              <version>${project.version}</version>
              <type>war</type>
              <asWebapp>true</asWebapp>
              <context-path>/${wms.contextPath}</context-path>
            </webapp>
          </webapps>
        </configuration>
        <executions>
          <execution>
            <id>start-tomcat</id>
            <phase>pre-integration-test</phase>
            <goals>
              <goal>run-war-only</goal>
            </goals>
            <configuration>
              <fork>true</fork>
            </configuration>
          </execution>
          <execution>
            <id>stop-tomcat</id>
            <phase>post-integration-test</phase>
            <goals>
              <goal>shutdown</goal>
            </goals>
          </execution>
        </executions>
      </plugin>

      <!-- Execute Java integration tests -->
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-failsafe-plugin</artifactId>
        <configuration>
          <systemPropertyVariables>
            <url>http://${tomcat.host}:${tomcat.port}/</url>
            <managerWebContextPath>${managerWeb.contextPath}</managerWebContextPath>
            <adContextPath>${managerWeb.adContextPath}</adContextPath>
          </systemPropertyVariables>
        </configuration>
      </plugin>

      <!-- Execute SoapUI integration tests -->
      <plugin>
        <groupId>com.smartbear.soapui</groupId>
        <artifactId>soapui-maven-plugin</artifactId>
        <dependencies>
          <dependency>
            <groupId>org.postgresql</groupId>
            <artifactId>postgresql</artifactId>
            <version>42.2.8</version>
          </dependency>
        </dependencies>
        <configuration>
          <outputFolder>${project.build.directory}/soapui</outputFolder>
          <junitReport>true</junitReport>
          <exportAll>false</exportAll>
          <printReport>true</printReport>
          <testFailIgnore>false</testFailIgnore>
          <projectProperties>
            <!-- JDBC -->
            <value>JdbcHost=lgvxplanisk</value>
            <value>JdbcPort=5433</value>
            <value>Database=xplanbox_integrationtest</value>
            <value>JdbcUser=lgvxplanisk</value>
            <value>JdbcPassword=lgvxplanisk</value>
            <!-- Services -->
            <value>ServiceEndpointHost=${tomcat.host}</value>
            <value>ServiceEndpointPort=${tomcat.port}</value>
            <value>ServiceContextWms=${wms.contextPath}</value>
            <value>ServiceContextWfs=${wfs.contextPath}</value>
            <value>ServiceContextWfsSyn=${synwfs.contextPath}</value>
            <!-- Manager -->
            <value>ManagerHost=${tomcat.host}</value>
            <value>ManagerPort=${tomcat.port}</value>
            <value>ManagerContext=${managerWeb.contextPath}</value>
            <value>ManagerContextAd=${managerWeb.adContextPath}</value>
          </projectProperties>
        </configuration>
        <executions>
          <execution>
            <id>integration-test</id>
            <phase>integration-test</phase>
            <goals>
              <goal>test</goal>
            </goals>
            <configuration>
              <projectFile>${project.basedir}/src/test/soapui/xplan-soapui-project.xml</projectFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <!-- junit -->
    <dependency>
      <groupId>junit</groupId>
      <artifactId>junit</artifactId>
    </dependency>
    <!-- xplanung -->
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>xplan-tests-resources</artifactId>
      <version>${project.version}</version>
      <scope>test</scope>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>xplan-manager-web</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>xplan-wfs</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>xplansyn-wfs</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>xplan-wms</artifactId>
      <version>${project.version}</version>
      <type>war</type>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>xplan-wfs-workspace</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>xplansyn-wms-workspace</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>xplansyn-wfs-workspace</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
    </dependency>
    <dependency>
      <groupId>${project.groupId}</groupId>
      <artifactId>xplan-manager-workspace</artifactId>
      <version>${project.version}</version>
      <type>zip</type>
    </dependency>
  </dependencies>

</project>
