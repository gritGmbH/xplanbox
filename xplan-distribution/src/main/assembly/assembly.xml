<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>xplan-distribution</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>

  <dependencySets>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>doc</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
      <includes>
        <include>de.latlon.product.xplanbox:xplan-benutzerhandbuch:*:*</include>
        <include>de.latlon.product.xplanbox:xplan-betriebshandbuch:*:*</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>bin</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
      <includes>
        <include>de.latlon.product.xplanbox:xplan-manager-cli:zip:*</include>
        <include>de.latlon.product.xplanbox:xplan-validator-cli:zip:*</include>
        <include>de.latlon.product.xplanbox:xplan-transform-cli:zip:*</include>
        <include>de.latlon.product.xplanbox:xplan-validatedb-cli:zip:*</include>
        <include>de.latlon.product.xplanbox:xplan-evaluation-schema-synchronize-cli:zip:*</include>
        <include>de.latlon.product.xplanbox:xplan-update-data-cli:zip:*</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>web</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
      <includes>
        <include>de.latlon.product.xplanbox:xplan-manager-web:war:*</include>
        <include>de.latlon.product.xplanbox:xplan-api-manager:war:*</include>
        <include>de.latlon.product.xplanbox:xplan-root:war:*</include>
        <include>de.latlon.product.xplanbox:xplan-validator-web:war:*</include>
        <include>de.latlon.product.xplanbox:xplan-api-validator:war:*</include>
        <include>de.latlon.product.xplanbox:xplansyn-wfs:war:*</include>
        <include>de.latlon.product.xplanbox:xplan-wfs:war:*</include>
        <include>de.latlon.product.xplanbox:xplan-wms:war:*</include>
        <include>de.latlon.product.xplanbox:xplan-inspireplu:war:*</include>
        <include>de.latlon.product.xplanbox:xplan-validator-wms:war:*</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>conf</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
      <includes>
        <include>de.latlon.product.xplanbox:xplan-manager-config:zip:*</include>
        <include>de.latlon.product.xplanbox:xplan-validator-config:zip:*</include>
        <include>de.latlon.product.xplanbox:xplan-workspaces:zip:*</include>
      </includes>
    </dependencySet>
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>test</outputDirectory>
      <outputFileNameMapping>${artifact.artifactId}${dashClassifier?}.${artifact.extension}</outputFileNameMapping>
      <includes>
        <include>de.latlon.product.xplanbox:xplan-tests-soapui:zip:*</include>
      </includes>
    </dependencySet>
  </dependencySets>
</assembly>
