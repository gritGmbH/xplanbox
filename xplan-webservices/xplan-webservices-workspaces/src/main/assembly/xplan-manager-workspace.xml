<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
  <id>xplan-manager-workspace</id>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>${basedir}/src/main/workspace</directory>
      <includes>
        <include>appschemas/inspireplu/PlannedLandUse.xsd</include>
        <include>datasources/feature/*</include>
        <include>sql/*</include>
      </includes>
      <excludes>
        <exclude>datasources/feature/inspireplu_view.xml</exclude>
      </excludes>
      <outputDirectory>.</outputDirectory>
      <filtered>false</filtered>
    </fileSet>
    <fileSet>
      <directory>${basedir}/src/main/workspace/jdbc/manager</directory>
      <outputDirectory>jdbc</outputDirectory>
      <filtered>false</filtered>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <useTransitiveDependencies>false</useTransitiveDependencies>
      <outputDirectory>/modules</outputDirectory>
      <useProjectArtifact>false</useProjectArtifact>
      <excludes>
        <exclude>de.latlon.product.xplanbox:xplan-core-schemas</exclude>
      </excludes>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>de.latlon.product.xplanbox:xplan-core-schemas</include>
      </includes>
      <unpack>true</unpack>
      <outputDirectory>/</outputDirectory>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>de.latlon.product.xplanbox:xplan-database-docker</include>
      </includes>
      <unpack>true</unpack>
      <outputDirectory>/sql</outputDirectory>
    </dependencySet>
  </dependencySets>
</assembly>
