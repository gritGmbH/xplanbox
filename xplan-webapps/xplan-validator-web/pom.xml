<?xml version="1.0"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <artifactId>xplan-validator-web</artifactId>
  <packaging>war</packaging>
  <name>xplan-validator-web</name>
  <description>Webanwendung XPlanValidatorWeb</description>

  <parent>
    <groupId>de.latlon.product.xplanbox</groupId>
    <artifactId>xplan-webapps</artifactId>
    <version>7.1-SNAPSHOT</version>
  </parent>

  <properties>
    <gwt.moduleName>de.latlon.xplan.validator.web.XPlanValidatorWeb</gwt.moduleName>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>gwt-maven-plugin</artifactId>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-dependency-plugin</artifactId>
        <executions>
          <execution>
            <id>unpack</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>de.xleitstelle.xplanung</groupId>
                  <artifactId>regeln</artifactId>
                  <overWrite>true</overWrite>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${project.build.outputDirectory}</outputDirectory>
            </configuration>
          </execution>
          <execution>
            <id>unpack-benutzerhandbuch</id>
            <phase>generate-resources</phase>
            <goals>
              <goal>unpack</goal>
            </goals>
            <configuration>
              <artifactItems>
                <artifactItem>
                  <groupId>${project.groupId}</groupId>
                  <artifactId>xplan-benutzerhandbuch</artifactId>
                  <classifier>validator-html</classifier>
                  <type>zip</type>
                </artifactItem>
              </artifactItems>
              <outputDirectory>${project.build.directory}/benutzerhandbuch</outputDirectory>
            </configuration>
          </execution>
        </executions>
      </plugin>
      <plugin>
        <groupId>org.apache.maven.plugins</groupId>
        <artifactId>maven-war-plugin</artifactId>
        <configuration>
          <webResources>
            <resource>
              <directory>src/main/webapp</directory>
              <includes>
                <include>index.html</include>
                <include>version.txt</include>
              </includes>
              <filtering>true</filtering>
            </resource>
            <resource>
              <directory>src/main/webapp</directory>
              <excludes>
                <exclude>index.html</exclude>
                <exclude>version.txt</exclude>
              </excludes>
              <filtering>false</filtering>
            </resource>
            <resource>
              <directory>${project.build.directory}/benutzerhandbuch</directory>
            </resource>
          </webResources>
        </configuration>
      </plugin>
    </plugins>
  </build>

