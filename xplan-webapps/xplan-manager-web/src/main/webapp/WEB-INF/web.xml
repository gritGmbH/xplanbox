<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

  <!-- Spring WebApplication Context -->
  <context-param>
    <param-name>contextClass</param-name>
    <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
  </context-param>
  <context-param>
    <param-name>contextConfigLocation</param-name>
    <param-value>de.latlon.xplan.manager.web.spring.config.ManagerWebSpringConfig</param-value>
  </context-param>

  <!-- Bootstrap the root application context as usual using ContextLoaderListener -->
  <listener>
    <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    <listener-class>de.latlon.xplan.manager.web.server.log.SystemLogListener</listener-class>
  </listener>

  <!-- Servlets -->
  <servlet>
    <servlet-name>configurationService</servlet-name>
    <servlet-class>de.latlon.xplan.manager.web.server.service.ManagerWebConfigurationServiceImpl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>xplanValidationService</servlet-name>
    <servlet-class>de.latlon.xplan.manager.web.server.service.XPlanMgrValidationServiceImpl</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>xplanvalidatorwebValidationconfigService</servlet-name>
    <servlet-class>de.latlon.xplan.validator.web.server.service.DefaultValidationConfigService</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>xplanmgrwebrest</servlet-name>
    <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
    <init-param>
      <param-name>contextClass</param-name>
      <param-value>org.springframework.web.context.support.AnnotationConfigWebApplicationContext</param-value>
    </init-param>
    <init-param>
      <param-name>contextConfigLocation</param-name>
      <param-value>de.latlon.xplan.manager.web.spring.config.XPlanManagerWebContextConfig</param-value>
    </init-param>
    <load-on-startup>1</load-on-startup>
  </servlet>

  <servlet-mapping>
    <servlet-name>configurationService</servlet-name>
    <url-pattern>/xplanmgrweb/config</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>xplanValidationService</servlet-name>
    <url-pattern>/xplanmgrweb/validation</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>xplanvalidatorwebValidationconfigService</servlet-name>
    <url-pattern>/xplanmgrweb/validationconfig</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>xplanmgrwebrest</servlet-name>
    <url-pattern>/xplanmgrweb/rest/*</url-pattern>
  </servlet-mapping>

  <!-- Default page to serve -->
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
  </welcome-file-list>

</web-app>
