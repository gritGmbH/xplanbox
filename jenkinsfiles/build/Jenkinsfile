pipeline {
  agent any
  options {
      disableConcurrentBuilds()
  }
  tools {
    maven 'maven-3.8'
    jdk 'openjdk11'
  }
  environment {
      MAVEN_OPTS='-Djava.awt.headless=true -Xmx4096m'
  }
  stages {
    stage('Preparation') {
      steps {
        sh 'mvn --version'
      }
    }
    stage('Build') {
      steps {
        withMaven(mavenLocalRepo: '.repository', mavenSettingsConfig: 'mvn-empty-settings') {
            sh 'mvn -B -C clean install -T8 -Dskip.owasp.check=true'
        }
      }
      post {
        always {
          junit '**/target/surefire-reports/*.xml'
        }
      }
    }
  }
  post {
      always {
          cleanWs notFailBuild: true
      }
  }
}
