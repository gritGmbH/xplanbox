pipeline {
  agent any
  tools {
    maven 'maven-3.8'
    jdk 'openjdk11'
  }
  stages {
    stage('Preparation') {
      steps {
        deleteDir()
        sh 'mvn --version'
      }
    }
    stage('Build') {
      steps {
        withMaven(mavenLocalRepo: '.repository') {
            sh 'mvn -B -C -q clean install'
        }
      }
      post {
        always {
          junit '**/target/surefire-reports/*.xml'
        }
      }
    }
  }
}
