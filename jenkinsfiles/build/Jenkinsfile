pipeline {
  agent any
  tools {
    maven 'maven361'
    jdk 'openjdk8'
  }
  parameters {
    string(defaultValue: "master", description: 'Set git branch', name: 'BRANCH')
  }
  stages {
    stage('Preparation') {
      steps{
        deleteDir()
        git credentialsId: 'latlon-CI-bitbucket', url: 'https://bitbucket.org/latlon/xplanbox.git', branch: ${BRANCH}
        sh 'mvn --version'
      }
    }
    stage('Build') {
      steps{
        sh 'mvn -B -C -q clean install'
      }
      post {
        always {
          junit '**/target/surefire-reports/*.xml'
        }
      }
    }
    stage('Deploy') {
      when {
        anyOf {
          branch ${BRANCH}
          environment name: 'DEPLOY_STEP', value: 'true'
        }
      }
      steps{
        sh 'mvn deploy -Dskip.unit.tests=true -Pdocker'
      }
    }
  }
}
